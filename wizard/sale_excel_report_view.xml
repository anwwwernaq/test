<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="sale_xls_report_view_form" model="ir.ui.view">
			<field name="model">sale.excel.report</field>
			<field name="arch" type="xml">
			<form string="Sale Excel Reports">
				<footer>
					<button name="sale_xls_report" type="object" string="Download File" class="btn btn-primary active"/>
					or
					<button string="Cancel" class="btn btn-danger disabled" special="cancel"/>
				</footer>
			</form>
			</field>
		</record>

		<act_window
			id="sale_xls_report_menu"
			name="Generate Sale XLS Report"
			res_model="sale.excel.report"
			binding_model="sale.order"
			binding_views="list,form"
			view_mode="form"
			target="new"
			domain="[('id','in',active_ids)]"
			view_id="bi_all_in_one_sale_reports.sale_xls_report_view_form"
			groups="bi_all_in_one_sale_reports.sales_reports_group"
		/>

		<record id="view_sale_excel_report" model="ir.ui.view">
			<field name="name">excel.report.form</field>
			<field name="model">excel.report</field>
			<field name="arch" type="xml">
				<form string="Genrated Excel File">
					<group>
						<field name="file_name" invisible="1"/>
						<field name="excel_file" readonly="1" filename="file_name"/>
					</group>
					<footer>
						<button string="Cancel" class="oe_link" special="cancel" />
						</footer>
					</form>
				</field>
		</record>

	</data>
</odoo>