<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

	<record id="sales_day_wise_report_view_form" model="ir.ui.view">
		<field name="name">sales.day.wise.report.form.view</field>
		<field name="model">sales.day.wise.report</field>
		<field name="arch" type="xml">
			<form string="Sales Day Wise Report">
				<group>
					<group>
						<field name="start_date" required="1"/>
					</group>

					<group>
						<field name="end_date" required="1"/>
					</group>
				</group>
				<group>
					<field name="company_ids" widget="many2many_tags"/>
				</group>
				
				<footer>
					<button name="sales_day_wise_pdf_report" class="btn btn-primary" string="Print PDF" type="object" />
					<button name="sales_day_wise_xls_report" class="btn btn-primary" string="Print XLS" type="object" />
					<button special="cancel" string="Cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="sales_day_wise_report_action" model="ir.actions.act_window">
		<field name="name">Sales Day Wise Report</field>
		<field name="res_model">sales.day.wise.report</field>
		<field name="view_id" ref="sales_day_wise_report_view_form" />
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<record id="my_customer_action" model="ir.actions.act_window">
		<field name="name">Active Customer</field>
		<field name="res_model">res.partner</field>
		<field name="view_id" ref="sale.action_quotations_with_onboarding" />
		<field name="context">{'search_default_sale_order_count': 1}</field>
		<field name="view_mode">kanban,form</field>
	</record>

	<menuitem name="Advance Sales Reports" id="advance_sale_report_menu" parent="sale.sale_menu_root"
        sequence="6" groups="bi_all_in_one_sale_reports.sales_reports_group"/>

    <menuitem name="Sales Day Wise Report" action="sales_day_wise_report_action" id="day_sale_report"
        parent="advance_sale_report_menu" sequence="2"/>

</odoo>