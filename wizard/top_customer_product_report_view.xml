<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

	<record id="top_customer_product_report_form_view" model="ir.ui.view">
		<field name="name">top.customer.product.report.form.view</field>
		<field name="model">top.customer.product.report</field>
		<field name="arch" type="xml">
			<form string="Top Customer Product Report">
				<group>
					<field name="report_type" widget="radio" />
				</group>
				<group>
					<group>
						<field name="from_date" required="1"/>
						<field name="to_date" required="1"/>
						<field name="no_item" />
					</group>
					<group>
						<field name="compare_from_date"
							attrs="{'invisible':[('report_type','!=','compare')],'required':[('report_type','=','compare')]}" />
						<field name="compare_to_date"
							attrs="{'invisible':[('report_type','!=','compare')],'required':[('report_type','=','compare')]}" />
					</group>
				</group>
				<group>
					<group>
						<field name="total_amount" />
						<field name="company_ids" widget="many2many_tags" />
						<field name="sales_channel_ids" />
					</group>
				</group>
				<footer>
					<button name="top_customer_product_pdf_report" class="btn btn-primary" string="Print PDF"
						type="object" />
					<button name="top_customer_product_xls_report" class="btn btn-primary"
						string="Print XLS" type="object" />
					<button special="cancel" string="Cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="top_customer_product_report_action" model="ir.actions.act_window">
		<field name="name">Top Customer Product Report</field>
		<field name="res_model">top.customer.product.report</field>
		<field name="view_id" ref="top_customer_product_report_form_view" />
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<menuitem 
		id="top_customer_product_report_menu"
		name="Top Customer Product Report"
		action="top_customer_product_report_action"  
		parent="advance_sale_report_menu"
		groups="bi_all_in_one_sale_reports.sales_reports_group"
		sequence="7"
	/>

</odoo>